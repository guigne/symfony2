{# src/Raf/SiteBundle/Resources/views/Blog/supprimer.html.twig #}
 
{% extends "RafSiteBundle::layout.html.twig" %}
 
{% block title %}
  Supprimer un article - {{ parent() }}
{% endblock %}
 
{% block rafsite_body %}
 
  <h2>Supprimer un article</h2>
 
  <p>
    Etes-vous certain de vouloir supprimer l'article "{{ article.titre }}" ?
  </p>
 
  {# On met l'id de l'article dans la route de l'action du formulaire #}
  <form action="{{ path('rafsite_supprimer', {'id': article.id}) }}" method="post">
    <a href="{{ path('rafsite_voir', {'id': article.id}) }}" class="btn">
      <i class="icon-chevron-left"></i>
      Retour Ã  l'article
    </a>
    <input type="submit" value="Supprimer" class="btn btn-danger" />
    {{ form_rest(form) }}
  </form>
 
{% endblock %}